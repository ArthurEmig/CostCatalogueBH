<Window x:Class="CostsViewer.Views.CorrectionFactorSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Correction Factor Settings" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="LightGray" Padding="10">
            <StackPanel>
                <TextBlock Text="Correction Factor Settings" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Set correction factors for each year from 1999 to current year. These factors will be applied to project costs." 
                          TextWrapping="Wrap" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <DataGrid ItemsSource="{Binding CorrectionFactors}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="LightBlue"
                      RowBackground="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Year" 
                                        Binding="{Binding Year}" 
                                        Width="100" 
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Correction Factor" 
                                        Binding="{Binding Factor, StringFormat=F4, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="Percentage" 
                                        Binding="{Binding Factor, StringFormat=P2, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="120"
                                        IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left side buttons for Excel operations -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Import from Excel" 
                        Command="{Binding ImportFromExcelCommand}" 
                        Width="130" 
                        Height="30" 
                        Margin="0,0,10,0"
                        ToolTip="Import correction factors from an Excel file"/>
                <Button Content="Export Template" 
                        Command="{Binding ExportTemplateCommand}" 
                        Width="120" 
                        Height="30" 
                        Margin="0,0,10,0"
                        ToolTip="Create an Excel template with default correction factors"/>
            </StackPanel>
            
            <!-- Right side buttons for actions -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset to Default" 
                        Command="{Binding ResetToDefaultCommand}" 
                        Width="120" 
                        Height="30" 
                        Margin="0,0,10,0"/>
                <Button Content="Apply Inflation" 
                        Command="{Binding ApplyInflationCommand}" 
                        Width="120" 
                        Height="30" 
                        Margin="0,0,10,0"/>
                <Button Content="OK" 
                        Command="{Binding OkCommand}" 
                        Width="80" 
                        Height="30" 
                        Margin="0,0,10,0" 
                        IsDefault="True"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        Width="80" 
                        Height="30" 
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
